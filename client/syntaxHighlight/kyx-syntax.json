{
  "scopeName": "source.kyx",
  "name": "KYX",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.kyx",
          "match": "//.*$"
        },
        {
          "name": "comment.block.kyx",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.kyx",
          "match": "\\b(true|false|and|or|not|implies|equiv|forall|exists|Real|Bool|HP|Problem|Definitions|ProgramVariables|Tactic|End|ArchiveEntry|Theorem|Lemma|Exercise|Definition|ProgramVariable)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.kyx",
          "match": "\\b(abs|min|max|succ|gt)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.kyx",
          "match": "\\+|\\-|\\*|\\/|\\^|\\=|\\>|\\>=|\\<|\\<=|\\->|\\<\\->|\\&|\\||\\!|\\:=|\\[|\\]|\\?|\\*"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.kyx",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
