{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true,
    "incremental": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src", "syntaxHighlight", "client/language-configuration.json"],
  "exclude": ["node_modules", ".vscode-test"],
  "references": [
    { "path": "./client" },
    { "path": "./server" }
  ]
}
